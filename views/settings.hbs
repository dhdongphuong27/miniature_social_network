<div class="container-fluid h-100 gedf-wrapper">
    <div class="row navbarmenu">
        <div class="col-md-12">
            <div class="dropdown text-light text-center">
                <b id="navbar-title">TDT University</b>
                <div class="button-dropdown justify-content-center" data-toggle="dropdown">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
                <div class="dropdown-menu bg-info">
                    <a href="/users/userid/{{user._id}}" class="bg-info dropdown-item text-light">
                        <i class="fa fa-address-card" aria-hidden="true"></i>
                        Profile
                    </a>
                    <a href="/" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Newsfeed
                    </a>
                    <a href="/notifications" class="bg-info dropdown-item text-light">
                        <i class="fa fa-bell-o" aria-hidden="true"></i>
                        Notification
                    </a>
                    <a href="/settings" class="bg-info dropdown-item text-light">
                        <i class="fa fa-cogs" aria-hidden="true"></i>
                        Settings
                    </a>
                    <a href="/users/signout" class="bg-info dropdown-item text-light">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row h-100">
        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-2" id="LSidebar">
            <div class="row sidebar-header">
                <a href="/users/userid/{{user._id}}">
                    <div class="col-md-12">
                        <p id="username" class="text-center font-weight-light" style="margin-bottom: 0.5rem;">
                            {{user.name}}</p>
                        <div class="sidebar-header-avt">
                            <img id="avt" src={{user.avatar}} class="avatar-primary border border-dark rounded-circle" />
                        </div>
                    </div>
                </a>
            </div>
            <div class="row sidebar-body">
                <div class="col-md-12">
                    <ul class="list-goup list-unstyled">
                        <li><a href="/" class="list-group-item newsfeed">
                                <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                                Newsfeed
                            </a></li>

                        <li><a href="/notifications" class="list-group-item notification">
                                <i class="fa fa-bell-o" aria-hidden="true"></i>
                                Notification
                            </a></li>
                        <li><a href="/settings" class="list-group-item setting">
                                <i class="fa fa-cogs" aria-hidden="true"></i>
                                Settings
                            </a></li>
                        <li><a href="/users/signout" class="list-group-item singout">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                Sign out
                            </a></li>
                        <li><a id="userid" class="bg-info list-group-item text-light d-none">{{user._id}}</a></li>
                        <li><a id="userrole" class="bg-info list-group-item text-light d-none">{{user.role}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 gedf-main pageCenter">
            <div class="container">
                <form>            
                    <div class="row">
                        <div class="col-8 offset-2">
                            <h1>General Account Settings</h1>
                        </div>
                    </div>
                    <div id="studentOnly">
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="form-group row">
                                    <label for="nameInput" class="col-md-4 col-form-label">Name:</label>
                                    <input id="nameInput" type="text" class="col-sm-4 form-control" name="nameInput" value="{{user.name}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="form-group row">
                                    <label for="classInput" class="col-md-4 col-form-label">Class:</label>
                                    <input id="classInput" type="text" class="col-sm-4 form-control" name="classInput" value="{{user.class}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="form-group row">
                                    <label for="facultyInput" class="col-md-4 col-form-label">Faculty:</label>
                                    <input id="facultyInput" type="text" class="col-sm-4 form-control" name="facultyInput" value="{{user.faculty}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="form-group row">
                                    <label for="phoneInput" class="col-md-4 col-form-label">Phone number:</label>
                                    <input id="phoneInput" type="text" class="col-sm-4 form-control" name="phoneInput" value="{{user.phone}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="form-group row">
                                    <label for="avatarInput" class="col-md-4 col-form-label">Profile picture:</label>
                                    <input id="avatarInput" type="file" accept="image/png, image/gif, image/jpeg, image/jpg" name="avatarInput" class="col-sm-4 form-control-file">
                                    <button class="btn btn-success" id="resetAvt">Reset Avatar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8 offset-2">
                            <div class="form-group row">
                                <label for="passwordInput" class="col-md-4 col-form-label">Password:</label>
                                <input id="passwordInput" type="password" class="col-sm-4 form-control" name="password" value={{user.password}} >
                            </div>
                        </div>
                    </div>
                    <div class="row pt-4 justify-content-center">
                        <div class="col-8">
                            <div class="form-group row">
                                <button class="btn btn-info" id="saveInfo">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>



        </div>
    </div>
</div>