<div class="container-fluid h-100 gedf-wrapper">
    <div class="row navbarmenu">
        <div class="col-md-12">
            <div class="dropdown text-light text-center">
                <b id="navbar-title">TDT University</b>
                <div class="button-dropdown justify-content-center" data-toggle="dropdown">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
                <div class="dropdown-menu bg-info">
                    <a href="/" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Newsfeed
                    </a>
                    <a href="/createacc" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Create account
                    </a>
                    <a href="/users/signout" class="bg-info dropdown-item text-light">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row h-100">
        <div class="col-md-2" id="LSidebar">
            <div class="row h-25 sidebar-header">
                <a href="#">
                    <div class="col-md-12">
                        <p id="username" class="text-center font-weight-light">{{user.name}}</p>
                        <img id="avt" src={{user.avatar}} class="avatar border border-info rounded-circle"
                            width="80" height="80" />
                    </div>
                </a>
            </div>
            <div class="row sidebar-body">
                <div class="col-md-12">
                    <ul class="list-goup list-unstyled">
                        <li><a href="/" class="list-group-item">Newsfeed</a></li>
                        <li><a href="/createacc" class="list-group-item info">Create account</a></li>
                        <li><a href="/users/signout" class="list-group-item info">Sign out</a></li>
                        <li><a id="userid" class="list-group-item text-light d-none">{{user._id}}</a></li>
                        <li><a id="userrole" class="list-group-item text-light d-none">{{user.role}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-7 gedf-main pageCenter">
            <div id="newsfeed">
                <template id="postTemplate">
                    <div class="card gedf-card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="mr-2">
                                        <img class="rounded-circle avatar" width="45" src="/images/defaultavt.png" alt="">
                                    </div>
                                    <div class="ml-2 pt-3 pl-2">
                                        <a class="profilelink">
                                            <div class="h5 m-0 display-name"></div>
                                        </a>
                                        <div class="text-muted h7 mb-2">
                                            <p class="created-at" title=""><i class="fa fa-clock-o"></i>10 min ago</p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="dropdown modifyContent">
                                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h"></i>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                            <button type="button" class="editPostBtn dropdown-item btn btn-info">Edit
                                                post</button>
                                            <button type="button" class="deletePostBtn dropdown-item btn btn-info">Delete
                                                post</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
            
                        </div>
                        <div class="card-body">
            
                            <p class="card-text statuscontent">
                                Hello world! aduuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuu....
                            </p>
                            <form class="editPostForm">
                                <textarea oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
                                    name="editcontent" class="form-control editcontent" rows="2" placeholder="" required></textarea>
                                <button class="btn btn-info savePostBtn">Save</button>
                            </form>
            
                            <a class="video-link"></a>
            
                        </div>
                        <div class="video-container">
                            <iframe class="video" src="https://www.youtube.com/embed/AGepNnFXd3c" title="YouTube video player"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                        </div>
            
                        <img src="" class="postImg" />
            
                        <div class="card-footer">
                            <div class="pb-2">
            
                                <button type="button" class="btn btn-outline-info custombtn showCommentsBtn" name="aslkdnas"><i
                                        class="fa fa-comment"></i> Show comments</button>
                                <button type="button" class="btn btn-outline-info custombtn hideCommentsBtn" name="aslkdnas"><i
                                        class="fa fa-comment"></i> Hide comments</button>
                            </div>
                            <div class="comment-container">
            
                            </div>
                            <div class="input-group">
                                <textarea oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' name="comment"
                                    class="form-control commentContentInput" rows="1" placeholder="" required></textarea>
                                <button class="btn btn-info commentBtn">Comment</button>
                            </div>
                        </div>
                    </div>
                </template>
                <template id="cmtTemplate">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mr-2">
                                    <img class="rounded-circle avatar" width="45" src="/images/defaultavt.png" alt="">
                                </div>
                                <div class="ml-2 pt-3 pl-2">
                                    <a class="profilelink" href="#">
                                        <div class="h5 m-0 display-name">samldkamslk</div>
                                    </a>
                                    <div class="text-muted h7 mb-2">
                                        <p class="commentcontent" title="">askndiasdkasdmaslkdanslk</p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="dropdown modifyContent">
                                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-h"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                        <button type="button" name="commentid"
                                            class="deleteCmtBtn dropdown-item btn btn-info">Delete comment</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>