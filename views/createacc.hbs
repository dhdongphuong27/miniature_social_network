<div class="container-fluid h-100 gedf-wrapper">
    <div class="row navbarmenu">
        <div class="col-md-12">
            <div class="dropdown text-light text-center">
                <b id="navbar-title">TDT University</b>
                <div class="button-dropdown justify-content-center" data-toggle="dropdown">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
                <div class="dropdown-menu bg-info">
                    <a href="/" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Newsfeed
                    </a>
                    <a href="/createacc" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Create account
                    </a>
                    <a href="/faculty" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Faculty/Department
                    </a>
                    <a href="/student" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Student
                    </a>
                    <a href="/users/signout" class="bg-info dropdown-item text-light">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row h-100">
        <div class="col-sm-0 col-md-2 col-lg-2 col-xl-2" id="LSidebar">
            <div class="row sidebar-header">
                <a href="/users/userid/{{user._id}}">
                    <div class="col-md-12">
                        <p id="username" class="text-center font-weight-light" style="margin-bottom: 0.5rem;">
                            {{user.name}}</p>
                        <div class="sidebar-header-avt">
                            <img id="avt" src={{user.avatar}} class="avatar-primary border border-dark rounded-circle" />
                        </div>
                    </div>
                </a>
            </div>
            <div class="row sidebar-body">
                <div class="col-md-12">
                    <ul class="list-goup list-unstyled">
                        <li><a href="/" class="list-group-item">Newsfeed</a></li>
                        <li><a href="/createacc" class="list-group-item info">Create account</a></li>
                        <li><a href="/faculty" class="list-group-item info">Faculty/Department</a></li>
                        <li><a href="/student" class="list-group-item info">Student</a></li>
                        <li><a href="/users/signout" class="list-group-item info">Sign out</a></li>
                        <li><a id="userid" class="list-group-item text-light d-none">{{user.id}}</a></li>
                        <li><a id="userrole" class="list-group-item text-light d-none">{{user.role}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-10 col-lg-10 col-xl-10 gedf-main pageCenter createAcc">
            <form class="createAccForm">
                <div class="form-group">
                    <label for="email"><b>Email</b></label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="Username" autofocus required>
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                    <label for="password"><b>Password</b></label>
                    <input type="password" class="form-control" id="pwd" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <label for="name"><b>Faculty</b></label>
                    <input type="text" class="form-control" id="name" placeholder="Faculty name" required>
                </div>
                <hr>
                <b>Categories:</b> <br>
                <div class="form-check-categories">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                            value="Phòng Công tác học sinh sinh viên (CTHSSV)" id="1">
                        <label class="form-check-label" for="1">Phòng Công tác học sinh sinh viên (CTHSSV)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Phòng Đại học" id="2">
                        <label class="form-check-label" for="2">Phòng Đại học</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Phòng Sau đại học" id="3">
                        <label class="form-check-label" for="3">Phòng Sau đại học</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Phòng điện toán và máy tính" id="4">
                        <label class="form-check-label" for="4">Phòng điện toán và máy tính</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Phòng khảo thí và kiểm định chất lượng"
                            id="5">
                        <label class="form-check-label" for="5">Phòng khảo thí và kiểm định chất lượng</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Phòng tài chính" id="6">
                        <label class="form-check-label" for="6">Phòng tài chính</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="TDT Creative Language Center" id="7">
                        <label class="form-check-label" for="7">TDT Creative Language Center</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Trung tâm tin học" id="8">
                        <label class="form-check-label" for="8">Trung tâm tin học</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                            value="Trung tâm đào tạo phát triển xã hội (SDTC)" id="9">
                        <label class="form-check-label" for="9">Trung tâm đào tạo phát triển xã hội (SDTC)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                            value="Trung tâm phát triển Khoa học quản lý và Ứng dụng công nghệ (ATEM)" id="10">
                        <label class="form-check-label" for="10">Trung tâm phát triển Khoa học quản lý và Ứng dụng công
                            nghệ (ATEM)</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                            value="Trung tâm hợp tác doanh nghiệp và cựu sinh viên" id="11">
                        <label class="form-check-label" for="11">Trung tâm hợp tác doanh nghiệp và cựu sinh viên</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Luật" id="12">
                        <label class="form-check-label" for="12">Khoa Luật</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                            value="Trung tâm ngoại ngữ - tin học – bồi dưỡng văn hóa" id="13">
                        <label class="form-check-label" for="13">Trung tâm ngoại ngữ - tin học – bồi dưỡng văn
                            hóa</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Viện chính sách kinh tế và kinh doanh"
                            id="14">
                        <label class="form-check-label" for="14">Viện chính sách kinh tế và kinh doanh</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Mỹ thuật công nghiệp" id="15">
                        <label class="form-check-label" for="15">Khoa Mỹ thuật công nghiệp</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Điện – Điện tử" id="16">
                        <label class="form-check-label" for="16">Khoa Điện – Điện tử</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Công nghệ thông tin" id="17">
                        <label class="form-check-label" for="17">Khoa Công nghệ thông tin</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Quản trị kinh doanh" id="18">
                        <label class="form-check-label" for="18">Khoa Quản trị kinh doanh</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Môi trường và bảo hộ lao động"
                            id="19">
                        <label class="form-check-label" for="19">Khoa Môi trường và bảo hộ lao động</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Lao động công đoàn" id="20">
                        <label class="form-check-label" for="20">Khoa Lao động công đoàn</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa Tài chính ngân hàng" id="21">
                        <label class="form-check-label" for="21">Khoa Tài chính ngân hàng</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Khoa giáo dục quốc tế" id="22">
                        <label class="form-check-label" for="22">Khoa giáo dục quốc tế</label>
                    </div>
                </div>
                <div class="postNotiContainer">
                    <button class="btn btn-success" id="postNotiSuccess">Tạo tài khoản thành công</button>
                </div>
                <button type="submit" id="createBtn" class="btn btn-info">Create</button>
            </form>
        </div>
    </div>
</div>