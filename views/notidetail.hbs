<div class="container-fluid h-100 gedf-wrapper">
    <div class="row navbarmenu">
        <div class="col-md-12">
            <div class="dropdown text-light text-center">
                <b id="navbar-title">TDT University</b>
                <div class="button-dropdown justify-content-center" data-toggle="dropdown">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
                <div class="dropdown-menu bg-info">
                    <a href="/users/userid/{{user._id}}" class="bg-info dropdown-item text-light">
                        <i class="fa fa-address-card" aria-hidden="true"></i>
                        Profile
                    </a>
                    <a href="/" class="bg-info dropdown-item text-light">
                        <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                        Newsfeed
                    </a>
                    <a href="/notifications" class="bg-info dropdown-item text-light">
                        <i class="fa fa-bell-o" aria-hidden="true"></i>
                        Notification
                    </a>
                    <a href="/settings" class="bg-info dropdown-item text-light">
                        <i class="fa fa-cogs" aria-hidden="true"></i>
                        Settings
                    </a>
                    <a href="/users/signout" class="bg-info dropdown-item text-light">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row h-100">
        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-2" id="LSidebar">
            <div class="row sidebar-header">
                <a href="/users/userid/{{user._id}}">
                    <div class="col-md-12">
                        <p id="username" class="text-center font-weight-light" style="margin-bottom: 0.5rem;">
                            {{user.name}}</p>
                        <div class="sidebar-header-avt">
                            <img id="avt" src={{user.avatar}} class="avatar-primary border border-dark rounded-circle" />
                        </div>
                    </div>
                </a>
            </div>
            <div class="row sidebar-body">
                <div class="col-md-12">
                    <ul class="list-goup list-unstyled">
                        <li><a href="/" class="list-group-item newsfeed">
                                <i class="fa fa-newspaper-o" aria-hidden="true"></i>
                                Newsfeed
                            </a></li>

                        <li><a href="/notifications" class="list-group-item notification">
                                <i class="fa fa-bell-o" aria-hidden="true"></i>
                                Notification
                            </a></li>
                        <li><a href="/settings" class="list-group-item setting">
                                <i class="fa fa-cogs" aria-hidden="true"></i>
                                Settings
                            </a></li>
                        <li><a href="/users/signout" class="list-group-item singout">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                Sign out
                            </a></li>
                        <li><a id="userid" class="bg-info list-group-item text-light d-none">{{user._id}}</a></li>
                        <li><a id="userrole" class="bg-info list-group-item text-light d-none">{{user.role}}</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 gedf-main pageCenter">
            <div class="col-md-12">
                <h4 class="rnews-header" id="rnews-header">
                    
                </h4>
                <div class="rnews-article">
                    <div class="rnews-article-summary">
                        <u>
                            <i>
                                <a id="categoryName" href="/faculty/lans"></a>
                            </i>
                            &nbsp;|
                            <i> Created at <span id="created-at">03/12/2021</span> </i>
                        </u>
                    </div>
            
                    <div class="rnews-article-content" id="rnew_content">
                        
                    </div>
                    <div class="form-group">
                        <textarea oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' name="editNotiTitle"
                            id="editNotiTitle" class="form-control" rows="1" required></textarea>
                        <textarea oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' name="editNotiContent"
                            id="editNotiContent" class="form-control" rows="2" required></textarea>
                    </div>
                </div>
            
            </div>
            {{#if owned}}
                <button type="button" class="btn btn-primary white-text editNotiBtn">
                    Sửa
                </button>
                <button type="button" class="btn btn-danger white-text deleteNotiBtn">
                    Xóa
                </button>
            {{/if}}


        </div>
    </div>
</div>